/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
        
        
    public int sumRootToLeaf(TreeNode root) {
            return hello(root,0);
    }
          private int hello(TreeNode root,int sum){
                  if(root==null){
                  return 0;
          }
                  sum=(sum<<1)+root.val;
           
            
          if(root.right==null && root.left==null)
                  return sum;
          
         return hello(root.left,sum)+hello(root.right,sum);
        
    }
}
